<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_linearlayout">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/blue"
                android:gravity="center|left"
                android:paddingLeft="5dp"
                android:text="现场信息上报"
                android:textColor="@color/white"/>

            <ImageView
                android:id="@+id/xxsb_close"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="right"
                android:background="@drawable/background_view_rounded_image"
                android:padding="@dimen/padding_7"
                android:src="@drawable/ic_close_black_24dp" />
        </FrameLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_linearlayout"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="2dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="end"
                android:minWidth="@dimen/width_90"
                android:padding="@dimen/padding_7"
                android:text="事件名称："
                android:textColor="@color/color_black" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="* "
                android:textColor="@color/red" />

            <EditText
                android:id="@+id/txt_fsdd"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center|left"
                android:padding="3dp"
                android:background="@drawable/background_edittxt"
                android:textCursorDrawable="@drawable/color_cursor" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_linearlayout"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="2dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="end"
                android:minWidth="@dimen/width_90"
                android:padding="@dimen/padding_7"
                android:text="事件描述："
                android:textColor="@color/color_black" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="* "
                android:textColor="@color/red" />

            <EditText
                android:id="@+id/txt_sjms"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center|left"
                android:padding="3dp"
                android:background="@drawable/background_edittxt"
                android:textCursorDrawable="@drawable/color_cursor" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_linearlayout"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="2dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="end"
                android:minWidth="@dimen/width_90"
                android:padding="@dimen/padding_7"
                android:text="经度："
                android:textColor="@color/color_black" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="* "
                android:textColor="@color/red" />

            <TextView
                android:id="@+id/txt_jd"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center|left"
                android:padding="3dp"
                android:background="@drawable/background_edittxt"
                android:textCursorDrawable="@drawable/color_cursor" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_linearlayout"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="2dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="end"
                android:minWidth="@dimen/width_90"
                android:padding="@dimen/padding_7"
                android:text="纬度："
                android:textColor="@color/color_black" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="* "
                android:textColor="@color/red" />

            <TextView
                android:id="@+id/txt_wd"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center|left"
                android:padding="3dp"
                android:background="@drawable/background_edittxt"
                android:textCursorDrawable="@drawable/color_cursor" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/bg_linearlayout"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="2dp"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:minWidth="@dimen/width_90"
                android:padding="@dimen/padding_7"
                android:text="联系电话："
                android:textColor="@color/color_black" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="*"
                android:textColor="@color/red" />

            <EditText
                android:id="@+id/txt_tel"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center|left"
                android:padding="3dp"
                android:background="@drawable/background_edittxt"
                android:textCursorDrawable="@drawable/color_cursor" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_linearlayout"
            android:orientation="vertical"
            android:padding="2dp">

            <TextView
                android:id="@+id/xczp_pic"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:drawableRight="@drawable/log_pic_logo"
                android:gravity="center|left"
                android:minWidth="@dimen/width_90"
                android:padding="@dimen/padding_7"
                android:text="现场照片"
                android:textColor="@color/color_black" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/txt_xczp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_linearlayout"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="2dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="end"
                android:minWidth="@dimen/width_90"
                android:padding="@dimen/padding_7"
                android:text="备注："
                android:textColor="@color/color_black" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="* "
                android:visibility="invisible"
                android:textColor="@color/red" />

            <EditText
                android:id="@+id/txt_beizhu"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center|left"
                android:padding="3dp"
                android:background="@drawable/background_edittxt"
                android:textCursorDrawable="@drawable/color_cursor" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_linearlayout"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="5dp">

            <TextView
                android:id="@+id/xxsb_save"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="20dp"
                android:background="@drawable/background_view_rounded_blue"
                android:gravity="center"
                android:minWidth="100dp"
                android:padding="5dp"
                android:text="上报"
                android:textColor="@color/white" />

        </LinearLayout>
    </LinearLayout>
</ScrollView>